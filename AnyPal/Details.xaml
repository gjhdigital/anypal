<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnyPal.Details"
             ControlTemplate="{StaticResource ModalTemplate}"
             Title="Contact Details"
             >
    
        <Frame>
            <ScrollView VerticalScrollBarVisibility="Never">
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
            <Label Text="Contact Details" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"></Label>
            <Entry x:Name="txtName" Placeholder="name" HorizontalOptions="FillAndExpand"></Entry>
            <Entry x:Name="txtEmail" Placeholder="email" HorizontalOptions="FillAndExpand"></Entry>
            <Button x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked" HorizontalOptions="FillAndExpand"></Button>
            <Button x:Name="btnCancel" Text="Cancel" Clicked="btnCancel_Clicked" HorizontalOptions="FillAndExpand"></Button>
            <Label x:Name="lblMessage" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand"></Label>
        </StackLayout>
                </ScrollView>
            </Frame>
    
</ContentPage>
